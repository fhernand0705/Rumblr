<%= erb :style %>

<!------ NAV BAR ------->

<div class="container">
   <div class="row">
     <h1 class="sec-logo">FILMSTER</h1>
    <a href="/dashboard"><img src="/images/home-icon2.png" title="dashboard"></a>
<% if session['user_id'] == nil %>
    <a href="/"><img src="/images/create-acc.png" title="create account"></a>
    <a href="/users/login"><img src="/images/login.png" title="login"></a>
<% else %>
    <a href="/users/<%= session['user_id'] %>"><img src="/images/profile.png" title="profile"></a>
    <a href="/posts/create"><img src="/images/post.png" title="create post"></a>

    <form class="" action="/logout" method="post">
      <a href="/" onclick="alert('Logout successful')"><img src="/images/logout.png" title="logout"></a>
    </form>
<% end %>
  </div>
</div>
